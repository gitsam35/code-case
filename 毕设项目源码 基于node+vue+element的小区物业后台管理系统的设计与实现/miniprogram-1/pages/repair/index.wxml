    <view class="repair">
        <view class="iconfont icon-yuandian-copy"></view>
        <view class="title">报修地点</view>
    </view>
    <input type="text" class="input-text" name="address" placeholder="请输入报修地点" />
    <view class="repair">
        <view class="iconfont icon-yuandian-copy"></view>
        <view class="title">报修人</view>
    </view>
